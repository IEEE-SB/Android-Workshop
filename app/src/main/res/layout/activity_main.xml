<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/teamA"
                    android:id="@+id/teamA"
                    android:gravity="center"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/scoreTeamA"
                    android:id="@+id/scoreTeamA"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:numeric="integer|signed" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/teamB"
                    android:id="@+id/teamB"
                    android:gravity="center"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/scoreTeamB"
                    android:id="@+id/scoreTeamB"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:numeric="integer|signed" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:baselineAligned="true"
            android:layout_weight="1"
            android:gravity="center|bottom">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/currentPointsTeamA"
                    android:id="@+id/currentPointsTeamA"
                    android:gravity="center|bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:layout_gravity="bottom"
                    android:gravity="bottom">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:layout_gravity="bottom">

                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/grandTichuTeamA"
                            android:textOn="@string/grandTichu"
                            android:textOff="@string/grandTichu"
                            android:onClick="grandTichuTeamA_pressed"
                            android:textStyle="bold"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/tichuTeamA"
                            android:textOff="@string/tichu"
                            android:textOn="@string/tichu"
                            android:onClick="tichuTeamA_pressed"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/oneTwo"
                            android:id="@+id/oneTwoTeamA"
                            android:textOn="@string/oneTwo"
                            android:textOff="@string/oneTwo"
                            android:onClick="oneTwoTeamA_pressed"
                            android:textStyle="bold"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:layout_gravity="bottom">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/go"
                            android:id="@+id/go_btn"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/plus50"
                            android:id="@+id/plus50"
                            android:onClick="plus50_pressed"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/plus20"
                            android:id="@+id/plus20"
                            android:onClick="plus20_pressed"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/currentPointsTeamB"
                    android:id="@+id/currentPointsTeamB"
                    android:gravity="center|bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:layout_gravity="bottom"
                    android:gravity="bottom">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:layout_gravity="bottom">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/clear"
                            android:id="@+id/clear"
                            android:onClick="clear"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/plus10"
                            android:id="@+id/plus10"
                            android:onClick="plus10_pressed"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/plus5"
                            android:id="@+id/plus5"
                            android:onClick="plus5_pressed"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:layout_gravity="bottom">

                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/grandTichu"
                            android:id="@+id/grandTichuTeamB"
                            android:textOff="@string/grandTichu"
                            android:textOn="@string/grandTichu"
                            android:textStyle="bold"
                            android:onClick="grandTichuTeamB_pressed"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/tichuTeamB"
                            android:textOff="@string/tichu"
                            android:textOn="@string/tichu"
                            android:onClick="tichuTeamB_pressed"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />

                        <ToggleButton
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="@string/oneTwo"
                            android:id="@+id/oneTwoTeamB"
                            android:textOn="@string/oneTwo"
                            android:textOff="@string/oneTwo"
                            android:onClick="oneTwoTeamB_pressed"
                            android:textStyle="bold"
                            android:layout_margin="1dp"
                            android:gravity="center|center_horizontal" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
